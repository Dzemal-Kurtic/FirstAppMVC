@model RegisterViewModel


<form asp-controller="Account" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-outline-success">Register account</button>
        <a asp-controller="Employee" asp-action="ViewAll" class="btn btn-secondary">Return to employee list</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Return to home page</a>
    </div>
</form>

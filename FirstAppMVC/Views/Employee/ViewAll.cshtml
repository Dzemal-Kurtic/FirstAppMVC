@model IEnumerable<Employee>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Department</th>
        </tr>
    </thead>
  
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Age</td>
                <td>@employee.Department</td>
                <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a></td>
                <td><a asp-controller="Employee" asp-action="Remove" asp-route-id="@employee.Id">Remove</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Employee" asp-action="Add">Add a worker</a>

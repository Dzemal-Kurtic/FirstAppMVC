@model Employee

<h1>Please add an employee</h1>

<form method="post">
    <p>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </p>

    <p>
        <label asp-for="Age"></label>
        <input asp-for="Age" />
    </p>

    <p>
        <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()"></select>     
    </p>

    <button type="submit">Submit</button>

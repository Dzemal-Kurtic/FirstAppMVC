@model Employee

<h1>Please add an employee</h1>

<form asp-controller="Employee" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age"></span>
    </div>

    <div class="form-group">
        <label asp-for="Department"></label>
        <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class="form-control">
            <option value="None">None</option>
        </select>
        <span asp-validation-for="Department"></span>
    </div>

    <div asp-validation-summary="All" ></div>

    <button type="submit" class="btn btn-outline-success">Create employee</button>
    <a asp-controller="Employee" asp-action="ViewAll" class="btn btn-secondary">Cancel</a>
</form>

